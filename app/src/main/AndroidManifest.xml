<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="charistas.actibit" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".auth.AuthenticationActivity"
            android:label="@string/title_activity_authentication"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PickActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogFitbitActivity"
            android:label="@string/title_activity_log_fit_bit"
            android:screenOrientation="portrait"
            android:parentActivityName=".PickActivity">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:parentActivityName=".PickActivity">
        </activity>
    </application>

</manifest>
