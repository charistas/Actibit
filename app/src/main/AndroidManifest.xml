<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="charistas.actibit" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="charistas.actibit.auth.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="charistas.actibit.auth.AuthenticationActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_authentication" >
        </activity>
        <activity
            android:name="charistas.actibit.PickActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="charistas.actibit.LogFitBitActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_log_fit_bit" >
        </activity>
    </application>

</manifest>
